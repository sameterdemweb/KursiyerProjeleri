                @Html.DisplayFor(modelItem => item.Kitap.KitapAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Okuyucu.AdiSoyadi)
            </td>
              <td>
                @Html.DisplayFor(modelItem => item.Kitap.raf.RafAdi)
