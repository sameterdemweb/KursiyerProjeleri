@model IEnumerable<GamzeArici.Entities.Islemler>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AlmaTarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IadeTarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kitap)
